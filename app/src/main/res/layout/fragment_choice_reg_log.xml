<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.registration_login.ChoiceRegLogFragment" android:background="@color/primaryDarkColor">


    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:cardBackgroundColor="@color/primaryColor">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:text="@string/text_button_registration"
                    android:layout_width="150dp"
                    android:layout_height="50dp" android:id="@+id/buttonChoiceRegistration"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/buttonChoiceLogin"
                    android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"/>
            <Button
                    android:text="@string/text_button_sign_in"
                    android:layout_width="150dp"
                    android:layout_height="50dp" android:id="@+id/buttonChoiceLogin"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
            <TextView
                    android:text="Забыли пароль?"
                    android:layout_width="wrap_content"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:layout_height="wrap_content" android:id="@+id/textViewResetPassword"
                    app:layout_constraintTop_toBottomOf="@+id/buttonChoiceRegistration"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>